<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="250dp"
                android:paddingRight="250dp"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.neversoft.smartwaiter.ui.LoginActivity">

    <ImageView
        android:id="@+id/syncImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/logo_imageView"
        android:src="@drawable/ic_settings" />

    <TextView
        android:id="@+id/usuarioLabel"
        style="@style/Label"
        android:layout_below="@+id/syncImageView"
        android:text="@string/usuario_label" />

    <EditText
        android:id="@+id/usuarioEditText"
        style="@style/CajaTexto"
        android:layout_below="@+id/usuarioLabel"
        android:hint="@string/usuario_hint"
        android:imeOptions="actionNext"
        android:inputType="textNoSuggestions" />

    <TextView
        android:id="@+id/contrasenaLabel"
        style="@style/Label"
        android:layout_below="@+id/usuarioEditText"
        android:text="@string/contrasena_label" />

    <EditText
        android:id="@+id/contrasenaEditText"
        style="@style/CajaTexto"
        android:layout_below="@+id/contrasenaLabel"
        android:hint="@string/contrasena_hint"
        android:imeOptions="actionDone"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/companiaLabel"
        style="@style/Label"
        android:layout_below="@+id/contrasenaEditText"
        android:text="@string/compania_label" />

    <Spinner
        android:id="@+id/companiaSpinner"
        style="@style/Control"
        android:layout_below="@+id/companiaLabel"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/iniciarSessionButton"
        style="@style/Boton"
        android:layout_alignParentBottom="true"
        android:text="@string/conectar" />

    <Button
        android:id="@+id/aceptarButton"
        style="@style/Boton"
        android:layout_alignParentBottom="true"
        android:text="@string/aceptar" />

</RelativeLayout>
