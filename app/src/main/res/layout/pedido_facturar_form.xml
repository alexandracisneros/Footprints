<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/activity_vertical_margin">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:weightSum="4.5">

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:weightSum="7">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Tipo Venta"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            <Spinner
                android:id="@+id/tipoVentaSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/secondary_text"/>

        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:weightSum="7">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Tipo Pago"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                />

            <Spinner
                android:id="@+id/tipoPagoSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/secondary_text"
                android:touchscreenBlocksFocus="true"/>

        </TableRow>

        <TableRow
            android:id="@+id/clienteRow"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:weightSum="7">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Cliente"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            <TextView
                android:id="@+id/clienteTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/form_horizontal_padding_normal"
                android:layout_weight="4"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/secondary_text"/>


        </TableRow>

        <TableRow
            android:id="@+id/rucRow"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:weightSum="7">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="RUC"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            <EditText
                android:id="@+id/rucEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/form_horizontal_padding_normal"
                android:layout_weight="4"
                android:inputType="number"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/secondary_text"
                />

            <ImageButton
                android:id="@+id/buscarClieImageButton"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_search"/>

        </TableRow>

    </TableLayout>

    <android.support.v7.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <TableRow
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:weightSum="7">

            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            <TextView
                android:id="@+id/totalTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/form_horizontal_padding_normal"
                android:layout_weight="4"
                android:text="0.00"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/secondary_text"/>
        </TableRow>

        <TableRow
            android:id="@+id/recibidoRow"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:weightSum="7">

            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Recibido"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            <EditText
                android:id="@+id/montoRecibidoEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="@dimen/form_horizontal_padding_normal"
                android:inputType="number"
                android:text="0.00"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/secondary_text"/>
        </TableRow>

        <TableRow
            android:id="@+id/restanteRow"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:weightSum="7">

            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Restante"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            <TextView
                android:id="@+id/restanteTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/form_horizontal_padding_normal"
                android:layout_weight="4"
                android:text="0.00"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/secondary_text"/>
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/aceptarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Aceptar"/>

        <Button
            android:id="@+id/cancelarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/aceptarButton"
            android:layout_toEndOf="@+id/aceptarButton"
            android:layout_toRightOf="@+id/aceptarButton"
            android:text="Cancelar"/>
    </RelativeLayout>
</LinearLayout>
