            android:textColor="@color/detail_accent_label"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"/>

        <TextView
            android:id="@+id/usuarioTextView"
            android:textColor="@android:color/white"
            app:layout_columnWeight="1"
            tools:text="Usuario"/>

        <TextView
            android:text="Empresa"
            android:textColor="@color/detail_accent_label"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"/>

        <TextView
