<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
        <item name="windowActionModeOverlay">true</item>
        <!--<item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>-->
        <item name="actionModeBackground">@color/primary_dark</item>
    </style>


    <!-- main activity toolbar style-->
    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
    </style>

    <style name="BrandButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/primary_dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@color/primary</item>
        <item name="android:windowMinWidthMinor">50%</item>
        <item name="android:windowMinWidthMajor">50%</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:padding">@dimen/form_horizontal_padding_normal</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>


    <style name="Separador">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


    <style name="BarraProgreso" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">7dp</item>
        <item name="android:indeterminate">true</item>
    </style>


    <!--<style name="activated" parent="@android:color/holo_blue_dark">-->
        <!--<item name="android:background">@android:color/holo_green_light</item>-->
    <!--</style>-->
</resources>
